<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="@string/layout_direction"
    android:background="@color/cabme_app_yellow"
    tools:context="com.rideincab.driver.home.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75adp"
        android:padding="@dimen/_5adp"
        android:background="@color/cabme_app_yellow"
        android:layoutDirection="@string/layout_direction"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

  <include
      android:id="@+id/app_toolbar_home"
      layout="@layout/app_bar_home_toolbar_view"/>


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/app_top_curve_white"
        android:layout_marginTop="@dimen/default_header_to">
    </FrameLayout>

</RelativeLayout>